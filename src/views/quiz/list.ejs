<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">Quizzes</h2>
            <a href="/quizzes/new" class="btn btn-success"><i class="bi bi-plus-lg"></i> + Create New Quiz</a>
        </div>
        
        <div class="row">
            <% if (quizzes && quizzes.length > 0) { %>
                <% quizzes.forEach(quiz => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold"><%= quiz.title %></h5>
                                <p class="card-text text-muted flex-grow-1"><%= quiz.description ? quiz.description.substring(0, 100) + '...' : 'No description' %></p>
                                <div class="mt-3 d-flex gap-2">
                                    <a href="/quizzes/<%= quiz._id %>" class="btn btn-primary btn-sm flex-grow-1">View</a>
                                    <a href="/quizzes/<%= quiz._id %>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
                                    <form action="/quizzes/<%= quiz._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirmSubmit('Are you sure you want to delete this quiz?', this);">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info text-center">No quizzes found. Create one to get started!</div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
