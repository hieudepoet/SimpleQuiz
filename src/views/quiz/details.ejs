<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <div class="mb-4">
            <a href="/quizzes" class="text-decoration-none text-muted mb-2 d-inline-block">&larr; Back to List</a>
            <h1 class="fw-bold"><%= quiz.title %></h1>
            <p class="lead text-muted"><%= quiz.description %></p>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Questions</h4>
                <!-- Maybe add "Add Question" button here if possible -->
            </div>
            <div class="list-group list-group-flush">
                <% if (quiz.questions && quiz.questions.length > 0) { %>
                    <% quiz.questions.forEach((question, index) => { %>
                        <div class="list-group-item">
                            <h5 class="mb-1">Q<%= index + 1 %>: <%= question.text || question.content %></h5>
                            <!-- Show options if available -->
                            <% if(question.options || question.answers) { %>
                                <ul class="mb-1">
                                    <% (question.options || question.answers).forEach(opt => { %>
                                        <li class="<%= opt.isCorrect ? 'text-success fw-bold' : '' %>"><%= opt.text || opt %></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="list-group-item text-center text-muted p-4">
                        No questions in this quiz yet.
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="d-flex gap-2">
            <a href="/quizzes/<%= quiz._id %>/edit" class="btn btn-warning">Edit Quiz</a>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
