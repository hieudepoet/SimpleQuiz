<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <div class="row">
            <!-- Left Column: Quiz Details -->
            <div class="col-md-5 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white">
                        <h4 class="mb-0 fw-bold">Edit Quiz Details</h4>
                    </div>
                    <div class="card-body">
                        <form action="/quizzes/<%= quiz._id %>?_method=PUT" method="POST">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title" value="<%= quiz.title %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"><%= quiz.description %></textarea>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/quizzes" class="btn btn-outline-secondary">Go Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Right Column: Question Management -->
            <div class="col-md-7">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">Questions in this Quiz</h5>
                        <span class="badge bg-primary rounded-pill"><%= (quiz.questions || []).length %></span>
                    </div>
                    <div class="list-group list-group-flush" style="max-height: 500px; overflow-y: auto;">
                        <% if (quiz.questions && quiz.questions.length > 0) { %>
                            <% quiz.questions.forEach((question, index) => { %>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="w-100 me-3">
                                            <div class="fw-bold mb-1"><%= index + 1 %>. <%= question.text || question.content %></div>
                                            
                                            <div class="small text-muted mb-1">
                                                <% 
                                                // Find correct answer text
                                                let correctText = "N/A";
                                                if (question.options && typeof question.correctAnswerIndex === 'number' && question.options[question.correctAnswerIndex]) {
                                                    correctText = question.options[question.correctAnswerIndex];
                                                }
                                                %>
                                                <span class="badge bg-success bg-opacity-10 text-success">
                                                    <i class="bi bi-check-circle me-1"></i> Answer: <%= correctText %>
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <form action="/quizzes/<%= quiz._id %>/remove-question" method="POST" class="d-inline" onsubmit="return confirmSubmit('Remove this question from the quiz?', this);">
                                            <input type="hidden" name="questionId" value="<%= question._id %>">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove from Quiz">
                                                <i class="bi bi-x-lg">Remove</i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="p-4 text-center text-muted">No questions assigned to this quiz yet.</div>
                        <% } %>
                    </div>
                </div>

                <!-- Add Questions Section -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 fw-bold">Add Question</h5>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs mb-3" id="addQuestionTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="existing-tab" data-bs-toggle="tab" data-bs-target="#existing" type="button" role="tab">Select Existing</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="new-tab" data-bs-toggle="tab" data-bs-target="#new" type="button" role="tab">Create New</button>
                            </li>
                        </ul>
                        
                        <div class="tab-content" id="addQuestionTabsContent">
                            <!-- Tab 1: Select Existing -->
                            <div class="tab-pane fade show active" id="existing" role="tabpanel">
                                <% if (availableQuestions && availableQuestions.length > 0) { %>
                                    <div class="list-group list-group-flush" style="max-height: 400px; overflow-y: auto;">
                                        <% availableQuestions.forEach(q => { %>
                                            <div class="list-group-item">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="w-100 me-3">
                                                        <div class="fw-bold mb-1"><%= q.text || q.content %></div>
                                                        <div class="small text-muted mb-1">
                                                            <% 
                                                            let correctText = "N/A";
                                                            if (q.options && typeof q.correctAnswerIndex === 'number' && q.options[q.correctAnswerIndex]) {
                                                                correctText = q.options[q.correctAnswerIndex];
                                                            }
                                                            %>
                                                            <span class="badge bg-secondary bg-opacity-25 text-dark">
                                                                <i class="bi bi-check-circle me-1"></i> Answer: <%= correctText %>
                                                            </span>
                                                        </div>
                                                    </div>

                                                    <form action="/quizzes/<%= quiz._id %>/add-question" method="POST" class="d-inline">
                                                        <input type="hidden" name="questionId" value="<%= q._id %>">
                                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Add to Quiz">
                                                            <i class="bi bi-plus-lg">Add</i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info py-2 mb-0">No more available questions to add.</div>
                                <% } %>
                            </div>

                            <!-- Tab 2: Create New -->
                            <div class="tab-pane fade" id="new" role="tabpanel">
                                <form action="/quizzes/<%= quiz._id %>/add-questions" method="POST" id="createQuestionsForm">
                                    <div id="questions-container" style="max-height: 500px; overflow-y: auto; padding-right: 10px;">
                                        <!-- Question 1 (Initial Template) -->
                                        <div class="card mb-3 question-card" data-index="0">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <span>Question 1</span>
                                                <button type="button" class="btn btn-sm btn-outline-danger remove-question-btn" style="display:none;">&times;</button>
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Question Text</label>
                                                    <textarea class="form-control" name="questions[0][text]" rows="2" required placeholder="Enter the question"></textarea>
                                                </div>
                    
                                                <label class="form-label">Options</label>
                                                <div class="mb-0">
                                                    <% for(let i=0; i<4; i++) { %>
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-text">
                                                            <input class="form-check-input mt-0" type="radio" name="questions[0][correctIndex]" value="<%= i %>" <%= i===0 ? 'checked':'' %> aria-label="Correct answer">
                                                        </div>
                                                        <input type="text" class="form-control" name="questions[0][options][]" placeholder="Option <%= i+1 %>" required>
                                                    </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between mb-3">
                                        <button type="button" class="btn btn-outline-primary" id="addMoreQuestionBtn">
                                            <i class="bi bi-plus-circle"></i> Add Another Question
                                        </button>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-success">Create & Add All Questions</button>
                                    </div>
                                </form>
                            </div>

                            <script>
                                document.addEventListener('DOMContentLoaded', function() {
                                    const container = document.getElementById('questions-container');
                                    const addBtn = document.getElementById('addMoreQuestionBtn');
                                    let questionCount = 1;

                                    addBtn.addEventListener('click', function() {
                                        const index = questionCount;
                                        const newCard = document.createElement('div');
                                        newCard.className = 'card mb-3 question-card';
                                        newCard.setAttribute('data-index', index);
                                        
                                        newCard.innerHTML = `
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <span>Question ${index + 1}</span>
                                                <button type="button" class="btn btn-sm btn-outline-danger remove-question-btn">&times;</button>
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Question Text</label>
                                                    <textarea class="form-control" name="questions[${index}][text]" rows="2" required placeholder="Enter the question"></textarea>
                                                </div>
                    
                                                <label class="form-label">Options</label>
                                                <div class="mb-0">
                                                    ${[0, 1, 2, 3].map(i => `
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-text">
                                                            <input class="form-check-input mt-0" type="radio" name="questions[${index}][correctIndex]" value="${i}" ${i===0?'checked':''} aria-label="Correct answer">
                                                        </div>
                                                        <input type="text" class="form-control" name="questions[${index}][options][]" placeholder="Option ${i+1}" required>
                                                    </div>
                                                    `).join('')}
                                                </div>
                                            </div>
                                        `;
                                        
                                        container.appendChild(newCard);
                                        questionCount++;
                                        updateRemoveButtons();
                                        
                                        // Scroll to new card
                                        newCard.scrollIntoView({ behavior: 'smooth' });
                                    });

                                    container.addEventListener('click', function(e) {
                                        if (e.target.classList.contains('remove-question-btn')) {
                                            e.target.closest('.question-card').remove();
                                            // Optional: re-index logic could go here, but not strict required if backend handles sparse arrays or objects
                                            updateRemoveButtons();
                                        }
                                    });

                                    function updateRemoveButtons() {
                                        const cards = container.querySelectorAll('.question-card');
                                        cards.forEach(card => {
                                            const btn = card.querySelector('.remove-question-btn');
                                            if (cards.length > 1) {
                                                btn.style.display = 'block';
                                            } else {
                                                btn.style.display = 'none';
                                            }
                                        });
                                    }
                                });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
